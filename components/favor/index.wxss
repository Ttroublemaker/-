.container {
  margin-top: 30rpx;
  display: flex;
  position: relative;
  box-shadow: 2px 2px 3px #e3e3e3;
  flex-direction: column;
  width: 300rpx;
  height: 400rpx;
  background-color: #fff;
  font-size: 24rpx;
  color: #959595;
}

.sub-title {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0 0 10rpx;
}

.type {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 10rpx;
  background-color: #f7f7f7;
}

.img, image {
  width: 100%;
  height: 200rpx;
}

.description {
  margin: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.toDetail{
  display: flex;
  justify-content: flex-end;
  padding-right:20rpx;
  padding-bottom:10rpx;
}
